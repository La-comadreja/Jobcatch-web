<table cellspacing='0' style='font-family:arial;text-align:left;margin-left:auto;margin-right:auto;'>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>    
    <tr><td style='font-size:16px'><b><%= devise_error_messages! %></b></td></tr>
    <tr><td style='font-size:20px;color:navy'><br><b>Edit User</b><br><br></td></tr>
    <tr><td style='font-size:16px;color:goldenrod'><b>full name</b></td></tr>
    <tr><td><%= f.text_field :name %></td></tr>
    <tr><td style='font-size:16px;color:goldenrod'><b>email</b></td></tr>
    <tr><td><%= f.email_field :email, :autofocus => true %></td></tr>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <tr><td style='font-size:16px;color:goldenrod'><b>awaiting confirmation for:<br><%= resource.unconfirmed_email %></b></td></tr>
    <% end %>
    <tr><td style='font-size:16px;color:goldenrod'><b>password</b></td></tr>
    <tr><td><%= f.password_field :password, :placeholder => "(leave blank unless changing it)", :autocomplete => "off" %></td></tr>
    <tr><td style='font-size:16px;color:goldenrod'><b>password confirmation</b></td></tr>
    <tr><td><%= f.password_field :password_confirmation %></td></tr>
    <tr><td style='font-size:16px;color:goldenrod'><b>desired job</b></td></tr>
    <tr><td><%= f.text_field :title %></td></tr>
    <tr><td style='font-size:16px;color:goldenrod'><b>(optional) previous positions,<br>accomplishments, education</b></td></tr>
    <tr><td><%= f.text_area :information, :size => '10x6', :placeholder => "no more than 3 sentences" %><br></td></tr>
    <tr><td style='font-size:16px;color:goldenrod'><b>current password<br>(confirms changes)</b></td></tr>
    <tr><td><%= f.password_field :current_password %></td></tr>
    <tr><td><%= f.submit "Update" %><br><br><br></td></tr>
  <% end %>

    <tr><td style='font-size:16px;color:goldenrod'><b>unhappy?</b></td></tr>
    <tr><td><%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></td></tr>
</table>

<br>
<%= link_to "Back", :back %><br>
<%= render "devise/shared/links" %>

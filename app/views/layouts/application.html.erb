<!DOCTYPE html>
<html>
<head>
  <title>Jobcatcher</title>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link href="/assets/custom.css" rel="stylesheet">
  <link href="/assets/application.css" rel="stylesheet">
  <link href="/assets/boot-business.css" rel="stylesheet">
  <link href="/assets/home.css" rel="stylesheet">
  <link href="/assets/jobs.css" rel="stylesheet">
</head>
<body>
  <div class="content">
    <div class="container">
      <div class="row">
        <div class="span6 offset3">
          <h2 class="widget-header">
            <a href="/">Jobcatcher</a><br>
          </h2>
          <div class="widget-body">
            <div style="text-align:right;">
              <% if user_signed_in? %>
                Browsing jobs as <%= current_user.name %>
              <% else %>
                <%= link_to 'Log In', new_user_session_path %> or <%= link_to 'Register', new_user_registration_path %><br>
                Save and share<br>your job interests.<br>
                <% end %>
            </div>
            <div class="center-align">
              <% if notice %>
                <p class="alert alert-notice"><%= notice %></p>
              <% end %>
              <% if alert %>
                <p class="alert alert-error"><%= alert %></p>
              <% end %>

              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
